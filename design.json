
{
  "name": "Podcasto Design System",
  "version": "1.0.0",
  "description": "A design system tokenized from the Podcasto app UI mockups. This system defines colors, typography, spacing, and component styles for consistent UI development.",
  "colors": {
    "background": {
      "light": {
        "value": "#E9E3FF",
        "description": "Primary light background with a lavender tint."
      },
      "dark": {
        "value": "#121316",
        "description": "Primary dark background, a near-black charcoal."
      },
      "darkElevated": {
        "value": "#191A1F",
        "description": "Elevated surface color for dark mode, like the bottom navigation."
      }
    },
    "text": {
      "primaryLight": {
        "value": "#FFFFFF",
        "description": "Primary text color for use on dark backgrounds."
      },
      "primaryDark": {
        "value": "#0F1013",
        "description": "Primary text color for use on light backgrounds."
      },
      "secondaryLight": {
        "value": "#BFC1C5",
        "description": "Secondary, less prominent text on dark backgrounds."
      },
      "secondaryDark": {
        "value": "#4A5568",
        "description": "Secondary, less prominent text on light backgrounds."
      }
    },
    "accent": {
      "primary": {
        "value": "#8B5CF6",
        "description": "Primary accent color, used in the microphone icon."
      },
      "secondary": {
        "value": "#FDE68A",
        "description": "Secondary accent, a warm yellow, used in the microphone icon."
      }
    },
    "gradients": {
      "banner": {
        "value": "linear-gradient(90deg, #7CC5FF, #79F0E0)",
        "description": "Gradient for the main 'Discover' banner."
      },
      "card1": {
        "value": "linear-gradient(135deg, #F0B3A1, #CAA0F7)",
        "description": "Gradient for the first podcast card."
      },
      "card2": {
        "value": "linear-gradient(135deg, #B3D2FF, #E0B1E1)",
        "description": "Gradient for the second podcast card."
      },
      "card3": {
        "value": "linear-gradient(135deg, #B7F0CE, #F2B2A8)",
        "description": "Gradient for the third podcast card."
      }
    },
    "ui": {
      "glass": {
        "value": "rgba(255, 255, 255, 0.08)",
        "description": "Background color for glassmorphism effect."
      }
    }
  },
  "typography": {
    "fontFamily": {
      "sans": {
        "value": "'Inter', 'Manrope', 'Poppins', sans-serif",
        "description": "Primary font family for the UI. Use web-safe fallbacks."
      }
    },
    "fontWeight": {
      "regular": 400,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "fontSize": {
      "xs": "0.625rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.25rem",
      "xl": "1.5rem",
      "2xl": "2.5rem",
      "3xl": "3.25rem"
    }
  },
  "spacing": {
    "baseUnit": "4px",
    "scale": {
      "xs": "4px",   
      "sm": "8px",   
      "md": "12px",  
      "lg": "16px",  
      "xl": "24px",  
      "2xl": "32px",
      "3xl": "40px" 
    }
  },
  "borderRadius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "3xl": "32px",
    "full": "9999px"
  },
  "effects": {
    "shadow": {
      "soft": {
        "value": "0 10px 25px rgba(0, 0, 0, 0.12), 0 6px 10px rgba(0, 0, 0, 0.06)",
        "description": "A soft, deep shadow for elevating main phone mockups."
      }
    },
    "blur": {
      "glass": {
        "value": "backdrop-filter: blur(8px)",
        "description": "Backdrop blur for the glassmorphism effect."
      }
    }
  },
  "components": {
    "button": {
      "primary": {
        "backgroundColor": "{colors.text.primaryDark.value}",
        "textColor": "{colors.text.primaryLight.value}",
        "borderRadius": "{borderRadius.full}",
        "padding": "{spacing.lg} {spacing.xl}",
        "fontWeight": "{typography.fontWeight.semibold}"
      }
    },
    "card": {
      "onboarding": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "{borderRadius.3xl}",
        "padding": "{spacing.2xl}"
      },
      "podcastItem": {
        "borderRadius": "{borderRadius.xl}",
        "padding": "{spacing.sm}",
        "textColor": "{colors.text.primaryDark.value}",
        "imagePlaceholder": {
          "borderRadius": "{borderRadius.md}",
          "aspectRatio": "16/9"
        }
      },
      "glass": {
        "backgroundColor": "{colors.ui.glass.value}",
        "borderRadius": "{borderRadius.xl}",
        "padding": "{spacing.md}",
        "backdropFilter": "{effects.blur.glass.value}"
      }
    },
    "bottomNavBar": {
      "backgroundColor": "{colors.background.darkElevated.value}",
      "borderRadius": "{borderRadius.2xl}",
      "padding": "{spacing.sm} {spacing.lg}",
      "textColor": "{colors.text.secondaryLight.value}"
    }
  }
}
