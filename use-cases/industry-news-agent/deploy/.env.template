# Database Configuration
DATABASE_URL=mysql://root:password@mysql:3306/phemcast
SECRET_KEY=your-secret-key-here-change-in-production

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# Tencent Cloud Configuration
TENCENT_CLOUD_SECRET_ID=your-tencent-secret-id
TENCENT_CLOUD_SECRET_KEY=your-tencent-secret-key
TENCENT_CLOUD_REGION=ap-guangzhou
TENCENT_FROM_EMAIL=your-email@example.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
SHOW_FILE_LINE=false
SHOW_FUNCTION=false

# Web Scraping
REQUEST_DELAY=2.0
MAX_CONCURRENT_REQUESTS=5
TIMEOUT=30

# Cache
CACHE_TTL_MINUTES=360

# Reporting
OUTPUT_DIR=reports
MAX_REPORT_SIZE_MB=10
